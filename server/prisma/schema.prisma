// prisma/schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model TokenLookup {
  id        Int      @id @default(autoincrement())
  token     String
  score     Int
  risk      String
  outlook   String
  createdAt DateTime @default(now())

  @@index([createdAt])
  @@index([token, createdAt])
}

model AgentRun {
  id          Int      @id @default(autoincrement())
  token       String
  agentType   String   // "sentiment" | "valuation" | "risk"
  inputsJSON  Json
  outputJSON  Json
  score       Float?
  confidence  Float?
  createdAt   DateTime @default(now())

  @@index([token, createdAt])
  @@index([agentType, createdAt])
}

model ConsensusRun {
  id           Int      @id @default(autoincrement())
  token        String
  decision     String   // "BUY" | "HOLD" | "SELL"
  confidence   Float
  rationaleJSON Json
  createdAt    DateTime @default(now())

  @@index([token, createdAt])
}

model BacktestRun {
  id           Int      @id @default(autoincrement())
  universe     String   // Trading universe description
  window       String   // Time window (e.g., "2023-01-01 to 2023-12-31")
  pnl          Float    // Profit/Loss
  sharpe       Float?   // Sharpe ratio
  sortino      Float?   // Sortino ratio
  maxDrawdown  Float?   // Maximum drawdown
  detailsJSON  Json     // Detailed backtest results
  createdAt    DateTime @default(now())

  @@index([createdAt])
}
